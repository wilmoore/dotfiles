
#
# editors & pagers
#

alias less=$PAGER
alias zless=$PAGER

#
# windows compatibility
#

alias cls='clear'

#
# colors
#

alias colors='for i in {0..255} ; do printf "\x1b[38;5;${i}mcolour${i}\n"; done'

#
# osx system management.
#

alias osxup='sudo softwareupdate -i -a'
alias nosleep='pmset noidle'

# https://news.ycombinator.com/item?id=7748346
alias lock='/System/Library/CoreServices/"Menu Extras"/User.menu/Contents/Resources/CGSession -suspend'

#
# say anything
#

# see: https://news.ycombinator.com/item?id=7748190
alias say-dum='say -v cellos "Dum dum dum dum dum dum dum he he he ho ho ho fa lah lah lah lah lah lah fa lah full hoo hoo hoo"'

#
# zprezto management
#

alias zpup='cd ~/.zprezto && git pull && git submodule update --init --recursive'

#
# dotfile management
#

# list dotfiles.
alias dfls='ls -lah ~/.dotfiles/active'

# update dotfiles (idempotent -- run as many times as you like).
alias dfup='bash ~/.dotfiles/setup'

#
# servers
#

alias serve='python -m SimpleHTTPServer'

#
# path utilities
#

alias path='echo $PATH | tr ":" "\n"'
alias path-sorted='echo $PATH | tr ":" "\n" | sort'

#
# log utilities
#

alias clear-logs='sudo rm -rf /private/var/log/asl/*.asl'

#
# todo.sh
#

alias todo='todo.sh'

#
# global tool installs.
#

# these really need to be installed by the system packager!
alias npm-install-g='npm install -g grunt-cli@latest coffee-script@latest jitsu@latest jshint@0.9.1 browser-repl@latest up@latest bower@latest jasmine-node@latest node-inspector@latest JSON.sh@latest broccoli-cli@latest growl@latest'

