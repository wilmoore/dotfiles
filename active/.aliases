
#
# editors & pagers
#

alias less=$PAGER
alias zless=$PAGER

#
# zprezto management
#

alias zpup='cd ~/.zprezto && git pull && git submodule update --init --recursive'

#
# dotfile management
#

# list dotfiles.
alias dfls='ls -lah ~/.dotfiles/active'

# update dotfiles (idempotent -- run as many times as you like).
alias dfup='bash ~/.dotfiles/setup'

#
# logs
#

alias clear-logs='sudo rm -rf /private/var/log/asl/*.asl'

#
# servers
#

alias serve='python -m SimpleHTTPServer'

#
# utility
#

alias path='echo $PATH | tr ":" "\n"'
alias path-sorted='echo $PATH | tr ":" "\n" | sort'

#
# homebrew
#

alias brewrc='brew update && brew upgrade && brew bundle $HOMEBREW_BUNDLES_D/people/wilmoore.brew'
alias brewrc-edit='$EDITOR ~/.brewrc'

#
# bower
#

alias bower-register-me='bower register $(basename $PWD) $(node -e "console.log(require('./package.json').repository.url)")'

#
# todo.sh
#

alias todo='todo.sh'

