# node or iojs
export NODE_BASE=node

# node or iojs version
# export NODE_VERSION=v0.12.5
export NODE_VERSION=v4.1.0

# node home directory
export NODE_HOME="$XDG_DATA_HOME/node"

# full path to current node/iojs version
export NODE_PATH="$NODE_HOME/versions/$NODE_BASE-$NODE_VERSION"

# program path
export PATH="$NODE_PATH/bin:$PATH"

# repl history: https://iojs.org/api/repl.html#repl_environment_variable_options
export NODE_REPL_HISTORY=~/.cache/node/.node_repl_history

# initialize npm
source $(dirname $0)/node-init-npm
