# https://nodejs.org/api/repl.html#repl_environment_variable_options
export NODE_REPL_HISTORY=~/.cache/node/.node_repl_history

# node home directory
export NODE_HOME="$XDG_DATA_HOME/node"

# node versions directory (binaries are downloadable @ https://nodejs.org/dist)
export NODE_VERSIONS="$NODE_HOME/versions"

# configure npm
source $(dirname $0)/node-init-npm
