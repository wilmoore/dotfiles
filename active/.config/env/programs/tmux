# add tmux session scripts to search path.
export PATH=$XDG_CONFIG_HOME/tmux/sessions:$PATH

# zsh-tmux-autostart (zsh-tmux-autostart is currently defined inline below)
if [[ -z "$TMUX" && -z "$EMACS" && -z "$VIM" ]]; then
  tmux start-server

  # initialize launcher
  @launcher 2>/dev/null

  # initialize in-progress apps/libs
  @polykata
  @bug-clinic

  # attach to last session.
  exec tmux attach-session
fi
